<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModel="clr-namespace:ViewModels;assembly=Frule.Wpf"
    x:Name="loginDialog"
    Title="Frule Login"
    Height="400"
    Width="600"
>
    <Window.DataContext>
        <viewModel:LoginDialogViewModel/>
    </Window.DataContext>
    <StackPanel Margin="10">
        <TextBlock Text="Frule Login"/>
        <TextBlock Text="Email"/>
        <TextBox x:Name="emailTextBox" Text="{Binding Email}"/>
        <TextBlock Text="Password"/>
        <TextBox x:Name="passwordTextBox" Text="{Binding Password}"/>
        <Button
            x:Name="loginButton"
            Content="Login"
            Command="{Binding LoginCommand, Mode=OneWay}"
            CommandParameter="{Binding ElementName=loginDialog}"
        />
        <Button
            x:Name="cancelButton"
            Content="Cancel"
            Command="{Binding CancelCommand, Mode=OneWay}"
            CommandParameter="{Binding ElementName=loginDialog}"
        />
        <Label Content="{Binding State}" />
    </StackPanel>
</Window>
